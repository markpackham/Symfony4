{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-default" href="/todo">Back to Todos</a>
    <hr>
    <h2 class="page-header">{{ todo.name }}</h2>
    <ul class="list-group">
        <li class="list-group-item">Category: {{ todo.category }}</li>
        <li class="list-group-item">Priority: {{ todo.priority }}</li>
        <li class="list-group-item"><strong>Description: {{ todo.description }}</strong></li>
        <li class="list-group-item">Due Date: {{ todo.dueDate|date('F j, Y, g:i a') }}</li>


    </ul>
{% endblock %}
